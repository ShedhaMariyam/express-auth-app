<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f4f6f9;
    }
    .navbar {
      background-color: #212529;
    }
    .navbar-brand {
      color: #fff;
      font-weight: bold;
    }
    .table thead {
      background: #212529;
      color: #fff;
    }
    .table-hover tbody tr:hover {
      background-color: #f1f1f1;
    }
    .total-users {
      font-weight: bold;
      font-size: 1.1rem;
      margin: 0 15px;
      color: #333;
      display: flex;
      align-items: center;
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Admin Panel</a>
      <form action="/admin/logout" method="POST" class="ms-auto">
        <button class="btn btn-danger">Logout</button>
      </form>
    </div>
  </nav>

  <div class="container mt-4">

    <!-- Search + Total Users + Add User -->
    <div class="d-flex justify-content-between align-items-center mb-3">


      <!-- Search -->
      <form class="d-flex" action="/admin/users/search" method="GET">
        <input type="text" class="form-control me-2" name="q" placeholder="Search user...">
        <button class="btn btn-primary">Search</button>
      </form>

      <!-- Total Users -->
      <div class="total-users">
        Total Users: {{users.length}}
      </div>

      <!-- Add User -->
      <a href="/admin/users/add" class="btn btn-success">+ Add User</a>
    </div>

    <!-- Users Table -->
    <div class="card shadow">
      <div class="card-body">
        <h5 class="mb-3">User List</h5>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {{#each users}}
            <tr>
              <td>{{this.name}}</td>
              <td>{{this.email}}</td>
              <td>
                <a href="/admin/users/edit/{{this._id}}" class="btn btn-warning btn-sm">Edit</a>
                <a href="/admin/users/delete/{{this._id}}" class="btn btn-danger btn-sm" onclick="return confirm('Delete this user?')">Delete</a>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

  </div>

</body>
</html>
